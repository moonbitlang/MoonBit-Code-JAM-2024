fn Game::welcome() -> Unit {
  draw_castle()
  if keyboard.button == X && keyboard.pressed {
    game.scene = World
    game.flag = true
    world.wld = World::new()
    return
  }
  if game.g_time > 360 {
    two_color(2, 0)
    @wasm.text("Up Dungeons", 35, @math.minimum(15, game.g_time / 4 - 90))
  }
  if game.g_time > 440 {
    if game.g_time % 30 == 0 {
      game.flag = not(game.flag)
    }
    if game.flag {
      @wasm.text("Press X to start", 20, 140)
    }
  }
}

fn draw_castle() -> Unit {
  @wasm.set_draw_colors(0, index=1)
  @wasm.set_draw_colors(4, index=2)
  @wasm.set_draw_colors(3, index=3)
  @wasm.set_draw_colors(2, index=4)
  castle.blit(
    60,
    @math.maximum(50, 160 - game.g_time / 4),
    36,
    52,
    { one_bit_per_pixel: false, flip_x: false, flip_y: false, rotate: false },
  )
}
